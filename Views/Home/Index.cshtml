<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Document</title>
</head>
<body>
    @{
    ViewData["Title"] = "Home Page";
}
<div id="reg-wrapper">
    <h3>Register</h3>
    @model loginreg.Models.User
    <form asp-controller="Home" asp-action="Register" method="post">
        <table>
            <tr>
                <td><label asp-for="FirstName"></label></td>
                <td><input class="form-control" asp-for="FirstName"></td>
                <td>&nbsp;&nbsp;<span asp-validation-for="FirstName"></span></td>
            </tr>
            <tr>
                <td><label asp-for="LastName"></label></td>
                <td><input class="form-control" asp-for="LastName"></td>
                <td>&nbsp;&nbsp;<span asp-validation-for="LastName"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Email"></label></td>
                <td><input class="form-control" asp-for="Email"></td>
                <td>&nbsp;&nbsp;<span asp-validation-for="Email"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Password"></label></td>
                <td><input class="form-control" type="password" asp-for="Password"></td>
                <td>&nbsp;&nbsp;<span asp-validation-for="Password"></span></td>
            </tr>
                <td><label asp-for="ConfirmPassword"></label></td>
                <td><input class="form-control" type="password" asp-for="ConfirmPassword"></td>
                <td>&nbsp;&nbsp;<span asp-validation-for="ConfirmPassword"></span></td>
            </tr>
            <tr>
            <td></td>
            <td><button style="float: right;" type="submit" class="btn btn-primary">Register</button></td>
            </tr>
        </table>
    </form>
</div>
<div id="login-wrapper">
    <h3>Login</h3>
    <form asp-controller="Home" asp-action="Login" method="post">
        <table>
            <tr>
                <td><label asp-for="Email"></label></td>
                <td><input class="form-control" asp-for="Email"></td>
                <td>&nbsp;&nbsp;<span asp-validation-for="Email"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Password"></label></td>
                <td><input class="form-control" type="password" asp-for="Password"></td>
                <td>&nbsp;&nbsp;<span asp-validation-for="Password"></span></td>
            </tr>
            <tr>
            <td></td>
            <td><button style="float: right;" type="submit" class="btn btn-primary">Login</button></td>
            </tr>
        </table>
    </form>
</div>
</body>
</html>

